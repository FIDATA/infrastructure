	"variables": {
		"version": "0.3.2",
		"aws_region": "eu-west-1",
		"aws_vpc_id": "vpc-7c3f9d1b",
		"aws_subnet_id": "subnet-3615b351",
		"aws_instance_type": "t2.medium",
		"aws_volume_size": "32",
		"ssh_port": "22",
		"ssh_username": "ubuntu",
		"ssh_timeout": "120s",
		"chef_version": "",
		"chef_dir": "",
		"berks_vendor_dir": "",
		"manifest_output_dir": ".",
		"aws_access_key": "",
		"aws_secret_key": "",
		"encrypted_data_bag_secret": ""
	},
	"builders": [
		{
			"name": "UbuntuServer-16.04.4+amd64",
			"access_key": "{{ user `aws_access_key` }}",
			"secret_key": "{{ user `aws_secret_key` }}",
			"ami_name": "JenkinsSlave-UbuntuServer-16.04.4_amd64-{{ user `version` }}",
			"type": "amazon-ebs",
			"tags": {
				"version": "{{ user `version` }}",
				"architecture": "amd64"
			},
			"source_ami_filter": {
				"filters": {
					"name": "UbuntuServer-16.04.4-*",
					"tag:version": "0.1.0",
					"tag:architecture": "amd64"
				},
				"owners": [
					"880042334380"
				]
			},
			"region": "{{ user `aws_region` }}",
			"vpc_id": "{{ user `aws_vpc_id` }}",
			"subnet_id": "{{ user `aws_subnet_id` }}",
			"instance_type": "{{ user `aws_instance_type` }}",
			"launch_block_device_mappings": [
				{
					"delete_on_termination": true,
					"volume_type": "gp2",
					"device_name": "/dev/sda1",
					"volume_size": "{{ user `aws_volume_size` }}"
				}
			],
			"communicator": "ssh",
			"ssh_port": "{{ user `ssh_port` }}",
			"ssh_username": "{{ user `ssh_username` }}",
			"ssh_timeout": "{{ user `ssh_timeout` }}"
		}
	],
	"provisioners": [
		{
			"type": "chef-solo",
			"install_command": "curl -L https://chef.io/chef/install.sh | {{ if .Sudo }} sudo {{ end }} bash -s -- -v {{ user `chef_version` }}",
			"cookbook_paths": [
				"{{ user `berks_vendor_dir` }}"
			],
			"data_bags_path": "{{ user `chef_dir` }}/data_bags",
			"encrypted_data_bag_secret_path": "{{ user `encrypted_data_bag_secret` }}",
			"environments_path": "{{ user `chef_dir` }}/environments",
			"chef_environment": "production",
			"run_list": [
				"recipe[fidata_jenkins_slave::default]"
			]
		},
		{
			"only": [
				"UbuntuServer-16.04.4+amd64"
			],
			"type": "shell",
			"environment_vars": [
				"DEBIAN_FRONTEND=noninteractive"
			],
			"execute_command": "chmod +x '{{ .Path }}'; echo '{{ user `password` }}' | sudo -S env {{ .Vars }} '{{ .Path }}'",
			"scripts": [
				"src/scripts/linux/cleanup.sh",
				"src/scripts/linux/zerodisk.sh",
				"src/scripts/linux/final_cleanup.sh"
			]
		},
		{
			"only": [
				"UbuntuServer-16.04.4+amd64"
			],
			"type": "shell",
			"environment_vars": [
				"DEBIAN_FRONTEND=noninteractive"
			],
			"execute_command": "chmod +x '{{ .Path }}'; {{ .Vars }} '{{ .Path }}'",
			"script": "src/scripts/linux/final_cleanup.sh"
		}
	],
	"post-processors": [
		{
			"type": "manifest",
			"output": "{{ user `manifest_output_dir` }}/JenkinsSlave-{{ build_name }}-{{ user `version` }}-{{ timestamp }}.json"
		}
	]
}
