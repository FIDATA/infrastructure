<VirtualHost *:80>
	ServerAdmin <%= @params[:server_admin] %>
	ServerName <%= @params[:server_name] %>
	ProxyPass <%= @params[:prefix] %> http://localhost:<%= @params[:proxy_port] %><%= @params[:prefix] %> nocanon
	ProxyPassReverse <%= @params[:prefix] %> http://localhost:<%= @params[:proxy_port] %><%= @params[:prefix] %>
	ProxyRequests Off
	AllowEncodedSlashes NoDecode
	<Proxy *>
		Order deny,allow
		Allow from all
	</Proxy>
	ProxyPreserveHost on
</VirtualHost>
